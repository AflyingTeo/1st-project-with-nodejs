extends ../layouts/common.pug

block content
    .mt-4.container
        h1 CREATE USER 

        if errors
            each error in errors 
                .alert.alert-danger= error

        form(action="/users/create", method="POST", enctype='multipart/form-data')
            .mb-3
                label.form-label(for='name') Name
                input#name.form-control(type='text', name="name", value= values ? values.name : "")
                label.form-label(for='phone-number') Phone
                input#phone-number.form-control(type='text', name="phone", value= values ? values.phone : "")
                label.form-label(for='avatar') Avatar
                input#avatar.form-control(type='file', name="avatar")
            button.btn.btn-primary Create